<GameScreen>:
    name: "game_screen"
    BoxLayout:
        orientation: "vertical"
        spacing: dp(10)
        padding: dp(20)

        Label:
            id: level_label
            text: "Level X"
            font_size: "28sp"
            size_hint_y: None
            height: dp(40)

        Label:
            id: question_label
            text: ''
            font_size: 48
            font_name: 'assets/fonts/MilkywayDemo.ttf'
            color: 1, 1, 1, 1


        Label:
            id: input_label
            text: ""
            font_size: "36sp"
            size_hint_y: None
            height: dp(60)
            color: 0.2, 1, 1, 1

        Label:
            id: feedback_label
            text: ""
            font_size: "24sp"
            color: 1, 1, 1, 1
            size_hint_y: None
            height: dp(40)

        GridLayout:
            cols: 3
            spacing: dp(10)
            size_hint_y: None
            height: dp(220)

            Button:
                text: "1"
                on_press: root.on_number_press(self.text)
            Button:
                text: "2"
                on_press: root.on_number_press(self.text)
            Button:
                text: "3"
                on_press: root.on_number_press(self.text)
            Button:
                text: "4"
                on_press: root.on_number_press(self.text)
            Button:
                text: "5"
                on_press: root.on_number_press(self.text)
            Button:
                text: "6"
                on_press: root.on_number_press(self.text)
            Button:
                text: "7"
                on_press: root.on_number_press(self.text)
            Button:
                text: "8"
                on_press: root.on_number_press(self.text)
            Button:
                text: "9"
                on_press: root.on_number_press(self.text)
            Button:
                text: "⌫"
                on_press: root.on_delete()
            Button:
                text: "0"
                on_press: root.on_number_press(self.text)
            Button:
                text: "✔️"
                on_press: root.on_submit()
