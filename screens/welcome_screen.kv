<WelcomeScreen>:
    FloatLayout:
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1  # white background for now
            Rectangle:
                pos: self.pos
                size: self.size

        Label:
            text: "Hey! Welcome to [b]Multifly[/b]"
            markup: True
            font_size: '36sp'
            size_hint: None, None
            size: self.texture_size
            pos_hint: {"center_x": 0.5, "center_y": 0.6}
            color: 0.2, 0.5, 0.9, 1  # cheerful blue color

        Button:
            text: "Start Game"
            font_size: '24sp'
            size_hint: 0.4, 0.1
            pos_hint: {"center_x": 0.5, "center_y": 0.4}
            background_color: 0.3, 0.7, 1, 1
            on_release:
                app.root.current = "level_select"  # We'll add this screen later
